{
  "version": "2",
  "templates": [
    {
      "type": 1,
      "title": "qBittorrent VPN",
      "name": "qbittorrent-vpn",
      "description": "qBittorrent with integrated VPN (OpenVPN/WireGuard), Privoxy, and microsocks for secure torrenting. Includes IP leak protection and proxy services for enhanced privacy.",
      "categories": [
        "Downloaders"
      ],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/GodSpoon/portainer-templates/master/icons/qbittorrent.png",
      "image": "binhex/arch-qbittorrentvpn:latest",
      "network": "bridge",
      "privileged": true,
      "sysctls": [
        {
          "name": "net.ipv4.conf.all.src_valid_mark",
          "value": "1"
        }
      ],
      "ports": [
        {
          "label": "WebUI Port",
          "description": "qBittorrent Web Interface",
          "default": "8080",
          "protocol": "tcp",
          "web": true
        },
        {
          "label": "Privoxy Port",
          "description": "Privoxy HTTP Proxy",
          "default": "8118",
          "protocol": "tcp"
        },
        {
          "label": "SOCKS Proxy Port",
          "description": "microsocks SOCKS5 Proxy",
          "default": "9118",
          "protocol": "tcp"
        },
        {
          "label": "BitTorrent Port TCP",
          "description": "BitTorrent listening port (TCP)",
          "default": "58946",
          "protocol": "tcp"
        },
        {
          "label": "BitTorrent Port UDP",
          "description": "BitTorrent listening port (UDP)",
          "default": "58946",
          "protocol": "udp"
        }
      ],
      "volumes": [
        {
          "label": "Config Directory",
          "description": "Configuration files and VPN configs",
          "default": "/portainer/Files/AppData/Config/qbittorrent-vpn",
          "bind": "/config"
        },
        {
          "label": "Downloads Directory",
          "description": "Torrent downloads location",
          "default": "torrent",
          "bind": "/data"
        },
        {
          "label": "Timezone",
          "description": "System timezone",
          "default": "/etc/localtime",
          "bind": "/etc/localtime",
          "readonly": true
        }
      ],
      "env": [
        {
          "label": "VPN Enabled",
          "name": "VPN_ENABLED",
          "default": "yes",
          "description": "Enable/disable VPN connection",
          "select": [
            {
              "text": "Yes",
              "value": "yes",
              "default": true
            },
            {
              "text": "No",
              "value": "no"
            }
          ]
        },
        {
          "label": "VPN Client",
          "name": "VPN_CLIENT",
          "default": "wireguard",
          "description": "VPN client to use",
          "select": [
            {
              "text": "WireGuard",
              "value": "wireguard",
              "default": true
            },
            {
              "text": "OpenVPN",
              "value": "openvpn"
            }
          ]
        },
        {
          "label": "VPN Provider",
          "name": "VPN_PROV",
          "default": "custom",
          "description": "VPN provider (use 'custom' for manual config)",
          "select": [
            {
              "text": "Custom",
              "value": "custom",
              "default": true
            },
            {
              "text": "Private Internet Access",
              "value": "pia"
            },
            {
              "text": "AirVPN",
              "value": "airvpn"
            },
            {
              "text": "ProtonVPN",
              "value": "protonvpn"
            }
          ]
        },
        {
          "label": "VPN Username",
          "name": "VPN_USER",
          "default": "",
          "description": "VPN username (leave empty for WireGuard or if using key-based auth)"
        },
        {
          "label": "VPN Password",
          "name": "VPN_PASS",
          "default": "",
          "description": "VPN password (leave empty for WireGuard or if using key-based auth)"
        },
        {
          "label": "LAN Network",
          "name": "LAN_NETWORK",
          "default": "192.168.1.0/24",
          "description": "Local network CIDR to allow access from"
        },
        {
          "label": "DNS Servers",
          "name": "NAME_SERVERS",
          "default": "1.1.1.1,1.0.0.1",
          "description": "DNS servers to use (Cloudflare by default)"
        },
        {
          "label": "Enable Privoxy",
          "name": "ENABLE_PRIVOXY",
          "default": "yes",
          "description": "Enable Privoxy HTTP proxy",
          "select": [
            {
              "text": "Yes",
              "value": "yes",
              "default": true
            },
            {
              "text": "No",
              "value": "no"
            }
          ]
        },
        {
          "label": "Enable SOCKS Proxy",
          "name": "ENABLE_SOCKS",
          "default": "yes",
          "description": "Enable microsocks SOCKS5 proxy",
          "select": [
            {
              "text": "Yes",
              "value": "yes",
              "default": true
            },
            {
              "text": "No",
              "value": "no"
            }
          ]
        },
        {
          "label": "SOCKS Username",
          "name": "SOCKS_USER",
          "default": "admin",
          "description": "SOCKS proxy username"
        },
        {
          "label": "SOCKS Password",
          "name": "SOCKS_PASS",
          "default": "socks",
          "description": "SOCKS proxy password"
        },
        {
          "label": "Strict Port Forwarding",
          "name": "STRICT_PORT_FORWARD",
          "default": "yes",
          "description": "Enable strict port forwarding",
          "select": [
            {
              "text": "Yes",
              "value": "yes",
              "default": true
            },
            {
              "text": "No",
              "value": "no"
            }
          ]
        },
        {
          "label": "WebUI Port",
          "name": "WEBUI_PORT",
          "default": "8080",
          "description": "Port for qBittorrent web interface"
        },
        {
          "label": "User ID (PUID)",
          "name": "PUID",
          "default": "1000",
          "description": "User ID for file permissions"
        },
        {
          "label": "Group ID (PGID)",
          "name": "PGID",
          "default": "1000",
          "description": "Group ID for file permissions"
        },
        {
          "label": "UMASK",
          "name": "UMASK",
          "default": "002",
          "description": "File creation mask"
        },
        {
          "label": "Debug Mode",
          "name": "DEBUG",
          "default": "false",
          "description": "Enable debug logging",
          "select": [
            {
              "text": "False",
              "value": "false",
              "default": true
            },
            {
              "text": "True",
              "value": "true"
            }
          ]
        }
      ],
      "restart_policy": "unless-stopped",
      "note": "‚ö†Ô∏è IMPORTANT SETUP NOTES:\n\nüîê **WireGuard Setup**: After first run, place your WireGuard config file in the config/wireguard/ directory as 'wg0.conf'\n\nüìã **Default Credentials**:\n- qBittorrent: admin / (check config/supervisord.log for generated password)\n- SOCKS Proxy: admin / socks\n\nüåê **Access URLs**:\n- qBittorrent WebUI: http://YOUR_SERVER_IP:8080\n- Privoxy: http://YOUR_SERVER_IP:8118  \n- SOCKS5 Proxy: YOUR_SERVER_IP:9118\n\nüîß **Post-Installation**:\n1. Copy your WireGuard config to: [config-path]/wireguard/wg0.conf\n2. Restart the container\n3. Check logs to verify VPN connection\n4. Update qBittorrent password in WebUI\n\n‚ö†Ô∏è **Security**: This container runs in privileged mode for WireGuard support. Ensure proper network isolation."
    },
    {
      "type": 3,
      "title": "JunimoServer - Stardew Valley",
      "name": "junimoserver",
      "description": "24/7 Stardew Valley dedicated server with web-based VNC administration, automatic backups, and SMAPI mod support. Supports up to 150 players with persistent saves and crop protection.",
      "categories": [
        "Gaming"
      ],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/stardew-valley-dedicated-server/server/master/docker/rootfs/data/images/junimo.png",
      "repository": {
        "url": "https://github.com/GodSpoon/portainer-templates",
        "stackfile": "stacks/junimoserver/docker-compose.yml"
      },
      "env": [
        {
          "name": "GAME_PORT",
          "label": "Game Port",
          "description": "UDP port for Stardew Valley game connections",
          "default": "24643"
        },
        {
          "name": "VNC_PORT",
          "label": "VNC Port",
          "description": "Port for web-based VNC administration interface",
          "default": "8090"
        },
        {
          "name": "VNC_PASSWORD",
          "label": "VNC Password",
          "description": "Password for VNC web interface access (required for administration)"
        },
        {
          "name": "STEAM_USER",
          "label": "Steam Username",
          "description": "Steam account username (required for initial game download)"
        },
        {
          "name": "STEAM_PASS",
          "label": "Steam Password",
          "description": "Steam account password (required for initial game download)"
        },
        {
          "name": "STEAM_GUARD_CODE",
          "label": "Steam Guard Code",
          "description": "Steam Guard authentication code (leave empty if not using Steam Guard)"
        },
        {
          "name": "DISABLE_RENDERING",
          "label": "Disable Rendering",
          "description": "Disable game rendering for better performance on headless servers",
          "default": "true",
          "select": [
            {
              "text": "Yes (Recommended for headless servers)",
              "value": "true",
              "default": true
            },
            {
              "text": "No (Enable if you need visual output)",
              "value": "false"
            }
          ]
        }
      ]
    }
  ]
}
